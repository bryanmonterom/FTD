@model IEnumerable<AdminLteMvc.Models.EmployeeGroups>

@{
    ViewBag.Title = "Empleados / Grupo";
}
<div class="container-fluid">

<p>
    @Html.ActionLink("Crear nuevo", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })

</p>
<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Identification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Group.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Identification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Group.Name)
        </td>
        <td>
        
            @Html.ActionLink("Editar", "Edit", new { id=@item.Id }, new {@class="btn btn-primary" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=@item.Id}, htmlAttributes: new {@class="btn btn-danger" })
            </td>
    </tr>
}

</table>
</div>